<!DOCTYPE html>
<html>
<head>
  <title>Menu Management</title>
  <link rel="stylesheet" href="/styles/style.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/src/menuItems.js"></script>
</head>

<body>
  <div class="page-header">
    <h1>MENU MANAGEMENT</h1>
    <span id="itemsCount"></span>
    <a href="/addMenuItem" class="btn-add">Add New Item</a>
  </div>

  <table class="menu-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th>Price</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody id="menuItemsBody">
      <!-- Items injected by JS -->
    </tbody>
  </table>
  <div id="viewItemModal" class="modal-overlay">
  <div class="modal-card">
    <div class="modal-header">
      <h3 id="modalItemName"></h3>
      <button class="close-btn" onclick="closeViewModal()">âœ•</button>
    </div>

    <div class="modal-body">
      <p><strong>Category:</strong> <span id="modalItemCategory"></span></p>
      <p><strong>Description:</strong></p>
      <p id="modalItemDescription" class="description-box"></p>
      <p><strong>Price:</strong> $<span id="modalItemPrice"></span></p>
      <p>
        <strong>Status:</strong>
        <span id="modalItemStatus" class="status-pill"></span>
      </p>
    </div>

    <div class="modal-footer">
      <button class="btn-secondary" onclick="closeViewModal()">Close</button>
    </div>
  </div>
</div>
</body>
</html>
