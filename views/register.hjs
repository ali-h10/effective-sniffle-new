<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register</title>

  {{!-- <!-- Bootstrap -->
  <link rel="stylesheet" href="/styles/bootstrap.min.css"> --}}
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/style.css">
  
  <script src="/js/jquery-2.2.0.min.js"></script>
  <script src="/src/register.js"></script>
</head>

<body>

  <div class="register-container">
    <div class="register-card">

      <!-- Icon -->
      <div class="icon">✨</div>

      <!-- Title -->
      <h2>JOIN THE MAGIC</h2>
      <p>Create your account and start your magical journey</p>

      <!-- Error -->
      <div id="errorMsg" class="alert alert-danger d-none"></div>

      <!-- Form -->
      <form id="registerForm">

        <label>Full Name</label>
        <input type="text" class="form-control" placeholder="Harry Potter" id="name">

        <label>Email</label>
        <input type="email" class="form-control" placeholder="wizard@hogwarts.edu" id="email">

        <label>Password</label>
        <input type="password" class="form-control" placeholder="••••••••" id="password">

        <label>Birth Date</label>
        <input type="date" class="form-control" id="birthDate">

        <button type="submit" class="btn-register">
          ✨ Register
        </button>

      </form>
      <div class="auth-footer">
        <span>Already have an account?</span>
        <a href="/">Login</a>
      </div>
    </div>
  </div>

</body>
</html>